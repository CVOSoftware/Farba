<UserControl
    x:Class="Farba.View.Component.PaletteGeneratorMain"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"   
    xmlns:local="clr-namespace:Farba.View.Component"
    mc:Ignorable="d" 
    d:DesignHeight="800" 
    d:DesignWidth="800">
    <ScrollViewer Style="{StaticResource ResourceKey=@Style/ScrollViewer}">
        <Grid Margin="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="500" />
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <local:ImageViewer Grid.Row="0"/>
                <local:ColorCombination Grid.Row="1"/>
            </Grid>
        </Grid>
    </ScrollViewer>
</UserControl>
