<Application
    x:Class="Farba.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Resource/Reset.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Resource/String.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Resource/Fonts.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Resource/Images.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Resource/Converter.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Resource/Theme/Color.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Resource/Theme/Brush.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Resource/Theme/Effect.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Resource/Theme/Animation.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Resource/Theme/Style.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
