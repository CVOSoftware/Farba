<Window
    x:Class="Farba.View.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ViewModel="clr-namespace:Farba.ViewModel"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Farba"
    Width="711"
    Height="550"
    Icon="{StaticResource ResourceKey=@Image/Icon}"
    ResizeMode="CanMinimize"
    Style="{StaticResource ResourceKey=@Style/Window}"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid Style="{StaticResource ResourceKey=@Style/WindowBackground}">
        <TabControl Style="{StaticResource ResourceKey=@Style/TabControl}" TabStripPlacement="Left">
            <TabItem>
                <TabItem.DataContext>
                    <ViewModel:PaletteViewModel />
                </TabItem.DataContext>
                <TabItem.Header>
                    <Image
                        Width="30"
                        Height="30"
                        Source="{StaticResource ResourceKey=@Image/Palette}" />
                </TabItem.Header>
                <TabItem.Content>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="240" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" Style="{StaticResource ResourceKey=@Style/BackgroundControll}">
                            <StackPanel Margin="20" />
                        </StackPanel>
                        <ScrollViewer Grid.Column="1" Style="{StaticResource ResourceKey=@Style/ScrollViewer}">
                            <StackPanel>
                                <TextBlock>StackPanel</TextBlock>
                            </StackPanel>
                        </ScrollViewer>
                    </Grid>
                </TabItem.Content>
            </TabItem>
            <TabItem>
                <TabItem.DataContext>
                    <ViewModel:ConverterViewModel />
                </TabItem.DataContext>
                <TabItem.Header>
                    <Image
                        Width="30"
                        Height="30"
                        Source="{StaticResource ResourceKey=@Image/Converter}" />
                </TabItem.Header>
                <TabItem.Content>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="240" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!--#region  Markup example-->
                        <Grid Grid.Column="0" Style="{StaticResource ResourceKey=@Style/BackgroundControll}" />
                        <!--#endregion-->

                        <ScrollViewer Grid.Column="1" Style="{StaticResource ResourceKey=@Style/ScrollViewer}">
                            <StackPanel Height="700" />
                        </ScrollViewer>
                    </Grid>
                </TabItem.Content>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
